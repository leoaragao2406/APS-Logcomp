// Exemplo 2: Condicionais
LET nivel_agua = READ(water_level);

IF (nivel_agua > 80) {
    EMIT valvula_agua OFF;
}

IF (nivel_agua < 20) {
    EMIT valvula_agua ON;
    WAIT 10 TICKS;
    EMIT valvula_agua OFF;
}

IF (READ(door_closed) == 1) {
    EMIT motor ON;
}

IF (READ(door_closed) == 0) {
    EMIT motor OFF;
}

